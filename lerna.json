{
  "npmClient": "yarn",
  "useWorkspaces": true,
  "packages": [
    "packages/*"
  ],
  "version": "independent",
  "command": {
    "publish": {
      "registry": "http://localhost:4873"
    },
    "version": {
      "allowBranch": ["master"],
      "message": "chore(release): publish version %s",
      "ignoreChanges": ["yarn.lock"],
      "exact": true,
      "noCommitHooks": true,
      "includeMergedTags": true,
      "conventionalCommits": true
    }
  }
}
